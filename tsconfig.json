{
    "compilerOptions": {
        "allowJs": true,
        "sourceMap": true,
        "target": "es5",
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "pretty": true,
        "preserveConstEnums": true,
        "useDefineForClassFields": true,
        "noEmit": false,
        "strictFunctionTypes": true,
        "downlevelIteration": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/server/lib/SACP-SDK/tests/**/*"
    ]
}